{
    "window.title": "${activeEditorMedium}${separator}${rootName}",
    "editor.insertSpaces": false,
    "files.eol": "\n",
    "files.exclude": {
        "**/.*": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "build": true,
        "deploy": true,
        "tplify": true,
        "**/package-lock.json": true,
        "**/babel.config.js": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "build": true,
        "deploy": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/build/**": true,
        "**/deploy/**": true,
        "tplify": true
    },
    "eslint.autoFixOnSave": true,
    "eslint.alwaysShowStatus": true,
    "eslint.run": "onType"
}